<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nico.trippingsdcardphotomanager.PhotoView">

    <fragment
        android:name="com.nico.trippingsdcardphotomanager.PhotoViewFragment"
        android:id="@id/wPhotoViewerFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_photo_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/picture_stats_bg"
        android:padding="4dp"
        android:id="@+id/wPictureStats"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/current_status" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wMarkForDelete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/description_mark_for_deletion"
        android:src="@android:drawable/ic_delete" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wMarkForCompression"
        android:contentDescription="@string/description_mark_for_compression"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/wMarkForDelete"
        android:layout_toStartOf="@+id/wMarkForDelete"
        android:src="@drawable/ic_compress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_new_path"
        android:id="@+id/wEmptyAlbum_SelectNewDir"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSelectNewDir"
        android:visibility="gone" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wOpenMenu"
        android:onClick="onOpenMenuClicked"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_more"
        android:layout_alignBottom="@id/wPhotoViewerFragment"
        android:contentDescription="@string/alt_text_open_menu" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wOpenFullImage"
        android:onClick="openFullImage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_menu_zoom"
        android:contentDescription="@string/alt_text_open_full_img" />

</RelativeLayout>
